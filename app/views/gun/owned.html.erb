<h1>This is all our guns</h1>
<table>
    <%@guns.each do |gun|%>
        <%if gun.user_id == current_user.id%>
            <tr>
                <td>the gun type is <%=gun.model%></td>
                <td><%=destroy_gun_button(gun)%></td>
                <td><%=edit_gun_button(gun)%></td>
                <td><%=show_gun_button(gun)%>
            </tr>
        <%end%>
    <%end%>
</table>
<br>
<a href = <%=new_gun_url%>>Add Gun to Store</a>
